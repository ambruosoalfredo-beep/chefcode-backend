        @media (display-mode: standalone) {
            /* Hide browser UI hints when installed */
            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                height: env(safe-area-inset-top);
                background: #2E4E6F;
                z-index: 1000;
