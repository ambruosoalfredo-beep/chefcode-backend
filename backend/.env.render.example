# ================================================================
# ChefCode Backend - Environment Variables per Render Deployment
# ================================================================
# 
# IMPORTANTE: Queste variabili vanno configurate su Render.com
# NON committare questo file su GitHub con valori reali!
#

# =============
# PRODUZIONE
# =============

# Ambiente di esecuzione (sempre production per Render)
NODE_ENV=production

# OpenAI API Key (sostituisci con la tua reale)
# Ottieni da: https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Domini consentiti per CORS
# * = tutti i domini (per APK pubblico)
# Oppure specifica domini: https://tuodominio.com,https://altrodominio.com
ALLOWED_ORIGINS=*

# Porta del server (Render la configura automaticamente)
PORT=3000

# =============
# SICUREZZA
# =============

# Rate limiting (richieste per minuto per IP)
RATE_LIMIT_MAX=100

# Timeout per richieste OpenAI (millisecondi)
OPENAI_TIMEOUT=30000

# Dimensione massima payload JSON (MB)
MAX_PAYLOAD_SIZE=10

# =============
# LOGGING
# =============

# Livello di log (error, warn, info, debug)
LOG_LEVEL=info

# Abilita log dettagliati (true/false)
ENABLE_DETAILED_LOGS=true

# =============
# CACHE
# =============

# Durata cache risposte AI (millisecondi)
AI_CACHE_DURATION=300000

# Durata cache dati app (millisecondi)
APP_DATA_CACHE_DURATION=60000

# =============
# SVILUPPO
# =============

# URL base per sviluppo locale (non usato in produzione)
DEV_BASE_URL=http://localhost:3000

# Abilita CORS per tutti i domini in sviluppo
DEV_CORS_ALL=true

# =============
# MONITORAGGIO
# =============

# Intervallo health check (millisecondi)
HEALTH_CHECK_INTERVAL=30000

# Timeout per connessioni esterne (millisecondi)
EXTERNAL_TIMEOUT=15000

# =============
# DATABASE (FUTURO)
# =============

# URL database (per future implementazioni)
# DATABASE_URL=mongodb://...
# DATABASE_NAME=chefcode

# =============
# ISTRUZIONI PER RENDER
# =============
#
# Su Render Dashboard, aggiungi solo queste variabili ESSENZIALI:
#
# 1. NODE_ENV = production
# 2. OPENAI_API_KEY = [la tua API key reale]
# 3. ALLOWED_ORIGINS = *
#
# Le altre variabili sono opzionali e hanno valori di default nel codice.
#